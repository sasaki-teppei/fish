<% @topics.each do |topic| %>
  <img src="<%=topic.image_name%>"><br>
  <%= topic.content %><br>
  <%= topic.price %><br>
  <% if !topic.point.present? %>
    <% if topic.address.present? %>
      <h>送付先住所</h><br>
      <%= topic.address %><br>
      <%= link_to("配送しました","/companies/#{topic.id}/ship", {method: :post}) %><br>
    <% else %>
      <h>配送は完了しました！</h><br>
    <% end %>
  <% else %>
    <h>取引が完了しました！</h><br>
  <% end %>
<% end %>

