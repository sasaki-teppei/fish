<header>
  <div class="top-header">
    <div class="row">
      <div class="col-md-offset-2 col-md-2 logo">
        <%= link_to "地魚マーケット","/top/index", class: 'logo' %>
      </div>
      <div class="col-md-2 l-btn">
      　<%= link_to "業者様ログイン","/top/company_login", class: 'btn-l'%>
      </div>
      <div class="col-md-2 l-btn">       
        <%= link_to "お客様ログイン","/top/user_login", class: 'btn-l'%>
      </div>
    </div>
  </div>
</header>
<div class="top-wrapper">
  <%= form_tag("/companies/create",{multipart: true}) do %> 
    <div class="c_login col-md-offset-5 col-md-2">
        <p class='text-white'>会社名</p>
        <input name="company_name" >
        <p class='text-white'>Eメール</p>
        <input name="email">
        <p class='text-white'>電話番号</p>
        <input name="phone_number">
        <p class='text-white'>住所</p>
        <input name="address">
        <p class='text-white'>パスワード</p>
        <input type="password" name="password" placeholder="半角英数字8~32文字">
        <p class='text-white'>買参権の写真</p>
        <input name="image_name" type="file">
        <input type="submit" value="新規登録">
    </div>
  <% end %>
</div>
  