<div class="c-show text-center">
    <p>
      <img src ="<%= current_company.profile_image %>">
    </p>
    <p>
      <%= current_company.company_name %>
    </p>
    <p>
      <%= current_company.address %>
    </p>
    <p>
      <%= current_company.phone_number %>
    </p>
    <p>
      <%= current_company.profile %>
    </p>
    <%= link_to("プロフィール編集","/companies/edit") %>
    <% current_company.topics.each do |topic| %>
      <p>
        <%= topic.content %><br>
        <%= topic.price %>
      </p>
      <div class="row">
        <div class="col-md-offset-5 col-md-2">
            <%= image_tag topic.image_name.url %>
        </div>
      </div>
      <br>
      <p>
        <%= topic.created_at %>
      </p>
    <% end %>
</div>