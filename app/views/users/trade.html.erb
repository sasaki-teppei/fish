<% @topics.each do |topic| %>
  <img src="<%=topic.image_name%>"><br>
  <%= topic.content %><br>
  <%= topic.price %><br>
  <% if !topic.point.present? %>
    <% if topic.address.present? %>
      <h>配送まで少々お待ちください</h><br>
      <h>送付先住所</h><br>
      <%= topic.address %><br>
    <% else %>
      <h>配送されました！</h><br>
      <h>到着次第受け取り評価をお願いします。</h><br>
      <%= link_to "受け取りました！","/users/#{topic.id}/point", company_id: topic.company.id, method: :post %><br>
    <% end %>
  <% else %>
    <h>取引が完了しました！</h><br>
  <% end %>
<% end %>

