<div class="show-wrapper">
    <div class="user text-center">
      <p>
        <%= notice %>
      </p>
      <p>
          ユーザー名：
          <%= current_user.user_name %>
      </p>
      <% @posts.each do |post| %>
        <p>
            <%= link_to(post.content,"/posts/#{post.id}") %>
            <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
        </p>
        <br>
      <% end %>
    </div>
</div>

<% if current_user.has_role? :admin %>
  <p>管理者だよ</p>
<% end %>

